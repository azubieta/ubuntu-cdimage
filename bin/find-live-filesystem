#! /bin/sh
set -e

export CDIMAGE_ROOT="${CDIMAGE_ROOT:-/srv/cdimage.ubuntu.com}"
. "$CDIMAGE_ROOT/etc/config"

if [ -z "$1" ] || [ -z "$2" ]; then
	echo 'Usage: find-live-filesystem ARCH cloop|squashfs|kernel|initrd|manifest|manifest-desktop|manifest-remove|size|winfoss|wubi|wubi-cdboot|umenu|usb-creator|ltsp-squashfs|tar.xz' >&2
	exit 1
fi
ARCH="$1"
ITEM="$2"
CPUARCH="${ARCH%%+*}"
SUBARCH="${ARCH#*+}"
if [ "$SUBARCH" = "$ARCH" ]; then
	SUBARCH=
fi

case $CPUARCH in
	amd64)
		LIVECD="${LIVECD:-http://king.buildd/~buildd/LiveCD}"
		if dist_le dapper; then
			FLAVOURS=amd64-generic
		else
			FLAVOURS=generic
		fi
		# Use normal amd64 live image on amd64+mac.
		case $SUBARCH in
			mac)
				SUBARCH= ;;
		esac
		;;
	armel)
		LIVECD="${LIVECD:-http://manoao.buildd/~buildd/LiveCD}"
		FLAVOURS=
		;;
	hppa)
		LIVECD="${LIVECD:-http://castilla.buildd/~buildd/LiveCD}"
		FLAVOURS='hppa32 hppa64'
		;;
	i386)
		LIVECD="${LIVECD:-http://terranova.buildd/~buildd/LiveCD}"
		if dist_le dapper; then
			FLAVOURS=386
		else
			FLAVOURS=generic
		fi
		;;
	ia64)
		LIVECD="${LIVECD:-http://weddell.buildd/~buildd/LiveCD}"
		if dist_le dapper; then
			FLAVOURS='itanium-smp mckinley-smp'
		elif dist_le jaunty; then
			FLAVOURS='itanium mckinley'
		else
			FLAVOURS=ia64
		fi
		;;
	lpia)
		if dist_le hardy; then
			LIVECD="${LIVECD:-http://terranova.buildd/~buildd/LiveCD}"
		else
			LIVECD="${LIVECD:-http://concordia.buildd/~buildd/LiveCD}"
		fi
		FLAVOURS=lpia
		;;
	powerpc)
		LIVECD="${LIVECD:-http://royal.buildd/~buildd/LiveCD}"
		case $SUBARCH in
			ps3)
				if dist_le gutsy; then
					FLAVOURS=cell
				else
					FLAVOURS='powerpc powerpc64-smp'
				fi
				;;
			*)
				FLAVOURS='powerpc powerpc64-smp'
				;;
		esac
		;;
	sparc)
		LIVECD="${LIVECD:-http://vivies.buildd/~buildd/LiveCD}"
		FLAVOURS=sparc64
		;;
	*)
		echo "No live filesystem source known for $ARCH" >&2
		exit 1
		;;
esac

case $PROJECT in
	livecd-base)
		LIVEPROJECT=base
		;;
	tocd3.1)
		LIVEPROJECT=tocd
		;;
	*)
		LIVEPROJECT="$PROJECT"
		;;
esac
if [ "$CDIMAGE_DVD" ] && ([ "$PROJECT" = ubuntu ] || [ "$PROJECT" = kubuntu ]); then
	if dist_ge hardy; then
		LIVEPROJECT="$LIVEPROJECT-dvd"
	fi
fi
if [ "$CDIMAGE_DVD" ] && [ "$PROJECT" = edubuntu ]; then
	if dist_ge karmic; then
		LIVEPROJECT="$LIVEPROJECT-dvd"
	fi
fi

if [ -z "$LIVECD_BASE" ]; then
	LIVECD_BASE="$LIVECD/$DIST/$LIVEPROJECT${SUBARCH:+-$SUBARCH}/current"
fi

case $ITEM in
	cloop|squashfs|manifest|manifest-desktop|manifest-remove|size|tar.xz)
		case $PROJECT in
			tocd3)
				# auto-purged - reverting to plan B
				echo "/home/cjwatson/tocd3/livecd.tocd3.$ITEM"
				;;
			ubuntu)
				case $DIST in
					breezy)
						# auto-purged - reverting to plan B
						echo "/home/cjwatson/breezy-live/ubuntu/livecd.$ARCH.$ITEM"
						;;
					*)
						echo "$LIVECD_BASE/livecd.$LIVEPROJECT${SUBARCH:+-$SUBARCH}.$ITEM"
						;;
				esac
				;;
			*)
				echo "$LIVECD_BASE/livecd.$LIVEPROJECT${SUBARCH:+-$SUBARCH}.$ITEM"
				;;
		esac
		;;
	kernel|initrd)
		for flavour in $FLAVOURS; do
			echo "$LIVECD_BASE/livecd.$LIVEPROJECT${SUBARCH:+-$SUBARCH}.$ITEM-$flavour"
		done
		;;
	winfoss)
		if [ "$DIST" = warty ]; then
			exit 1
		fi
		case $PROJECT in
			ubuntu)
				case $DIST in
					hoary)
						case $CPUARCH in
							i386)
								echo http://maitri.ubuntu.com/theopencd/ubuntu/winfoss/latest/Hoary-WinFOSS.tgz
								;;
							amd64)
								echo http://maitri.ubuntu.com/theopencd/ubuntu/amd64/latest/Hoary-WinFOSS-amd64.tgz
								;;
							*)	exit 1 ;;
						esac
						;;
					breezy)
						case $CPUARCH in
							i386|amd64)
								echo http://maitri.ubuntu.com/theopencd/winfoss/ubuntu/current/Ubuntu-WinFOSS-5.10.tgz
								;;
							*)	exit 1 ;;
						esac
						;;
					dapper)
						case $CPUARCH in
							i386|amd64)
								echo http://people.canonical.com/~henrik/winfoss/dapper/ubuntu/current/ubuntu-winfoss-6.06.tar.gz
								;;
							*)	exit 1 ;;
						esac
						;;
					edgy)
						case $CPUARCH in
							i386|amd64)
								echo http://people.canonical.com/~henrik/winfoss/edgy/ubuntu/current/ubuntu-winfoss-6.10.tar.gz
								;;
							*)	exit 1 ;;
						esac
						;;
					feisty)
						case $CPUARCH in
							i386|amd64)
								echo http://people.canonical.com/~henrik/winfoss/feisty/ubuntu/current/ubuntu-winfoss-7.04.tar.gz
								;;
							*)	exit 1 ;;
						esac
						;;
					gutsy|hardy|intrepid|jaunty|karmic)
						case $CPUARCH in
							i386|amd64)
								echo http://people.canonical.com/~henrik/winfoss/gutsy/ubuntu/current/ubuntu-winfoss-7.10.tar.gz
								;;
							*)	exit 1 ;;
						esac
						;;
				esac
				;;
			kubuntu)
				case $DIST in
					hoary)
						case $CPUARCH in
							i386)
								echo http://maitri.ubuntu.com/theopencd/kubuntu/winfoss/latest/Kubuntu-WinFOSS-i386.tgz
								;;
							*)	exit 1 ;;
						esac
						;;
					breezy)
						case $CPUARCH in
							i386)
								echo http://maitri.ubuntu.com/theopencd/winfoss/kubuntu/current/Kubuntu-WinFOSS-5.10.tgz
								;;
							amd64)
								echo http://maitri.ubuntu.com/theopencd/winfoss/kubuntu-AMD/current/Kubuntu-WinFOSS-5.10-AMD.tgz
								;;
							*)	exit 1 ;;
						esac
						;;
					dapper)
						case $CPUARCH in
							i386|amd64)
								echo http://people.canonical.com/~henrik/winfoss/dapper/kubuntu/current/kubuntu-winfoss-6.06.tar.gz
								;;
							*)	exit 1 ;;
						esac
						;;
					edgy)
						case $CPUARCH in
							i386|amd64)
								echo http://people.canonical.com/~henrik/winfoss/edgy/kubuntu/current/kubuntu-winfoss-6.10.tar.gz
								;;
							*)	exit 1 ;;
						esac
						;;
					feisty)
						case $CPUARCH in
							i386|amd64)
								echo http://people.canonical.com/~henrik/winfoss/feisty/kubuntu/current/kubuntu-winfoss-7.04.tar.gz
								;;
							*)	exit 1 ;;
						esac
						;;
					gutsy|hardy|intrepid|jaunty|karmic)
						case $CPUARCH in
							i386|amd64)
								echo http://people.canonical.com/~henrik/winfoss/gutsy/kubuntu/current/kubuntu-winfoss-7.10.tar.gz
								;;
							*)	exit 1 ;;
						esac
						;;
				esac
				;;
			edubuntu)
				case $DIST in
					feisty)
						case $CPUARCH in
							i386|amd64)
								echo http://people.canonical.com/~henrik/winfoss/feisty/edubuntu/current/edubuntu-winfoss-7.04.tar.gz
								;;
							*)	exit 1 ;;
						esac
						;;
					gutsy|hardy|intrepid|jaunty|karmic)
						case $CPUARCH in
							i386|amd64)
								echo http://people.canonical.com/~henrik/winfoss/gutsy/edubuntu/current/edubuntu-winfoss-7.10.tar.gz
								;;
							*)	exit 1 ;;
						esac
						;;
				esac
				;;
			tocd3)
				case $CPUARCH in
					i386)
						echo http://maitri.ubuntu.com/theopencd/tocd3/fsm/TOCD3.tgz
						;;
					*)	exit 1 ;;
				esac
				;;
			tocd3.1)
				case $CPUARCH in
					i386)
						echo http://maitri.ubuntu.com/theopencd/winfoss/tocd3.1/current/TOCD-31.tgz
						;;
					*)	exit 1 ;;
				esac
				;;
			*)	exit 1 ;;
		esac
		;;
	wubi)
		case $ARCH in
			amd64|i386)
				;;
			*)
				exit 1
				;;
		esac
		if dist_le feisty; then
			exit 1
		else
			echo http://people.canonical.com/~evand/wubi/$DIST/stable
		fi
		;;
	wubi-cdboot)
		case $ARCH in
			amd64|i386)
				;;
			*)
				exit 1
				;;
		esac
		if dist_le feisty; then
			exit 1
		else
			#echo http://wubi-installer.org/devel/minefields/Ubuntu-cdboot-7.10-alpha.exe
			:
		fi
		;;
	umenu)
		case $arch in
			amd64|i386)
				;;
			*)
				exit 1
				;;
		esac
		case $dist in
			warty|hoary|breezy|dapper|edgy|feisty|gutsy)
				exit 1
				;;
			hardy)
				echo http://people.canonical.com/~evand/umenu/stable
				;;
		esac
		;;
	usb-creator)
		case $ARCH in
			amd64|i386)
				;;
			*)
				exit 1
				;;
		esac
		echo http://people.canonical.com/~evand/usb-creator/$DIST/stable
		;;
	ltsp-squashfs)
		case $CPUARCH in
			amd64)
				# use i386 LTSP image on amd64 too
				exec "$0" i386 ltsp-squashfs
				;;
			i386)
				echo "$LIVECD_BASE/livecd.$LIVEPROJECT-ltsp.squashfs"
				;;
			*)
				exit 1
				;;
		esac
		;;
	*)
		echo "Unknown live filesystem item '$ITEM'" >&2
		exit 1
		;;
esac

exit 0
